@using BookShop.Core.Entities
@model Order
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-none border mb-0">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Order Summary</h4>

                            <div class="table-responsive">
                                <table class="table align-middle mb-0 table-nowrap">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">Product</th>
                                            <th scope="col">Product Desc</th>                            
                                            <th scope="col">Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            decimal Total = 0;
                                        }
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            Total += item.Count * item.Book.Price;
                                            <tr>
                                                <th scope="row"><img src="~/assets/images/books/@item.Image" alt="product-img" title="product-img" class="avatar-md"></th>
                                                <td>
                                                    <h5 class="font-size-14 text-truncate"><a href="ecommerce-product-detail.html" class="text-dark">@item.Book.Name </a></h5>
                                                    <p class="text-muted mb-0">$@item.Book.Price X @item.Count</p>
                                                </td>

                                                <td>@(item.Count * item.Book.Price)</td>
                                            </tr>

                                        }

                                        <tr>
                                            <td colspan="2">
                                                <h6 class="m-0 text-end">Sub Total:</h6>
                                            </td>
                                            <td>
                                                $ @Total
                                            </td>
                                        </tr>                                      
                                    </tbody>
                                </table>
                                <div class="col-sm-6 ml-2 mt-2">
                                    <form class="main-form full method="post" asp-action="OrderStatus">
                                        <div class="input-box form-group">
                                            <input type="hidden" asp-for="@Model.Id" />
                                            <div class="row">
                                                <label for="input-order-status" class="col-md-8 control-label">Order Status</label>
                                                <div class="col-md-6 mb-2">
                                                    <select asp-for="Status" class="form-control">
                                                        <option disabled selected="selected">Select Status</option>
                                                        <option value="true">Accept Order</option>
                                                        <option value="false">Cancele Order</option>
                                                    </select>
                                                </div>
                                                <div class="col-8 mt-6">
                                                    <button type="submit" class="btn btn-primary btn-round">Change</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>

                      
                      
                       
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>




