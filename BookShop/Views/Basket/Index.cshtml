		<!-- Product -->
		<div class="container">
			<div class="row mb-5">
				<div class="col-lg-12">
					<div class="table-responsive">
						<table class="table check-tbl">
							<thead>
								<tr>
									<th>Image</th>
									<th>Product name</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
									<th class="text-end">Close</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr id=@(item.Id+"tr")>
										<input type="hidden" value="@item.Id"/>
										<td class="product-item-img"><img src="~/assets/images/books/@item.ImageUrl" alt=""></td>
										<td class="product-item-name">@item.Name</td>
										<td id="product-price" class="product-item-price" data-id="@item.Price">@item.Price</td>
										<td class="product-item-quantity">
											<div class="quantity btn-quantity style-1 me-3">
												<input id="product-quality" min="1" type="number" name="quantity" class="form-control input-number"
												   value="@item.Count">
												@*<input id="demo_vertical2" type="text" value="1" name="demo_vertical2" />*@
											</div>
										</td>
										<td id=@("product-total-price" + item.Id) class="product-total-price">$@(item.Price * item.Count)</td>
										<td class="product-item-close"><a id="remove-from-cart" class="fa-solid fa-x"></a></td>
									</tr>
								}
								
								
							</tbody>
						</table>
					</div>
				</div>

			</div>
