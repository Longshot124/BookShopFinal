@using BookShop.BLL.BasketViewModels
@model List<BasketItemVM>
@{

    var products = Model;
    decimal totalPrice = 0;
    foreach (var item in products)
    {
        totalPrice = totalPrice + (item.Price * item.Count);
    }
}


<div class="page-content">
	<!-- inner page banner -->
