@model List<Book>
@foreach (var item in Model)
{
    <ul  class="custom-scroll mt-3">
        <li class="mx-2">
            <div class="product-cart media" style="display:flex; justify-content:space-between;">
                <img class="my-3" src="~/assets/images/books/@item.ImageUrl"
                class="img-fluid blur-up lazyload rounded-circle" style="width:75px; height:75px;" alt="">
                <div class="media-body">
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id">
                        <h6>@item.Name</h6>
                    </a>
                    <p>$@item.Price</p>
                </div>
            </div>
        </li>
    </ul>
}