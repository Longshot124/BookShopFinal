@model List<WishListViewModel>

<div class="page-content">
    <!-- inner page banner -->
    <div class="dz-bnr-inr overlay-secondary-dark dz-bnr-inr-sm" style="background-image:url(images/background/bg3.jpg);">
        <div class="container">
            <div class="dz-bnr-inr-entry">
                <h1>Wishlist</h1>
                <nav aria-label="breadcrumb" class="breadcrumb-row">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html"> Home</a></li>
                        <li class="breadcrumb-item">Wishlist</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <!-- inner page banner End-->
    <div class="content-inner-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table check-tbl">
                            <thead>
                                <tr id>
                                    <th>Image</th>
                                    <th>Product name</th>
                                    <th>Unit Price</th>
                                    <th>Offer</th>
                                    <th>Discounted Price</th>
                                    <th>Add to cart </th>
                                    <th>Close</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id=@(item.Id+"tr")>
                                        <td class="product-item-img"><img src="~/assets/images/books/@item.ImageUrl" alt=""></td>
                                        <td class="product-item-name">@item.Name</td>
                                        <td class="product-item-price">@item.Price</td>
                                        <td class="product-item-price">@item.Offer</td>
                                        <td class="product-item-price">@item.DiscountPrice</td>

                                        <td class="product-item-totle"><a href="shop-cart.html" class="btn btn-primary btnhover">add to cart</a></td>

                                        <td class="product-item-close">
                                            <a id="bookLink" class="fa-solid fa-x">
                                                <input type="hidden" id="bookId" value="@item.Id">
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>